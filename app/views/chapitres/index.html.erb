<% provide(:title, 'All users') %>
<h1>Listing chapitres</h1>

<table>
  <thead>
    <tr>
      <th>Chapitre</th>
      <th>Titre</th>

      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapitres.all.each do |chapitre| %>
    <li>
    
      <%= link_to chapitre.titre, chapitre %>
    </li>
    <tr>
     <span class="users">
      <td><%= chapitre.chapitre_id %></td>
     
      <td><%= chapitre.titre %></td>
      
   
</span> 
     
      <td><%= link_to 'Show', chapitre %></td>
      <td><%= link_to 'Edit', edit_chapitre_path(chapitre) %></td>
      <td><%= link_to 'Destroy', chapitre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'New Chapitre', new_chapitre_path %>

